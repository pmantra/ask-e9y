{
  "schema": 2,
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  },
  "envGroups": [
    {
      "name": "ask-e9y-env",
      "envs": [
        "OPENAI_API_KEY",
        "DATABASE_URL",
        "DEBUG",
        "ENV",
        "LOG_LEVEL",
        "LLM_PROVIDER"
      ]
    }
  ]
}